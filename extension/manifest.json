{
  "manifest_version": 3,
  "name": "Quick Search",
  "version": "1.0.0",
  "description": "Popup search with suggestions to jump to sections on the current page.",
  "action": {
    "default_title": "Search page sections",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "tabs", "webNavigation", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
} 